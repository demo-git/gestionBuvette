{% extends "base.html.twig" %}

{% block title %}Tarif buvette{% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="row">
            <h1>Tarif buvette</h1>
            <div class="col-xs-12">
                <div class="row">
                    {% for produit in produits %}
                        {% if produit.image is not null %}
                            <div style="background-image: url('{{ asset('uploads/' ~ produit.image.path) }}');margin: 0px 10px 0px 10px;" class="col-xs-6 col-sm-4 col-md-3 col-lg-2 vignette">{{ produit.nom }}<br/>{{ produit.prixVente }}€</div>
                        {% else %}
                            <div style="background-image: url('{{ asset('bundles/buvette/images/noimagefound.jpg') }}');margin: 0px 10px 0px 10px;" class="col-xs-6 col-sm-4 col-md-3 col-lg-2 vignette">{{ produit.nom }}<br/>{{ produit.prixVente }}€</div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}