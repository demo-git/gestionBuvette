{% extends "base.html.twig" %}

{% block title %}Facture{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <h1>Nouvelle Facture</h1>
        </div>
        <div class="row">
            <div class="content col-md-12">
                <div class="col-md-12"><h2>Produit : {{ produit.nom }}</h2></div>
                {{ form_start(form) }}
                    <div class="col-md-6">
                        {{ form_label(form.quantite) }}
                        {{ form_widget(form.quantite) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.prix) }}
                        {{ form_widget(form.prix) }}
                    </div>
                    {{ form_widget(form._token) }}
                    <div class="col-md-12 col-center">{{ form_widget(form.Ajouter) }}</div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}