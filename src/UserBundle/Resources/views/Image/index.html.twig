{% extends "base.html.twig" %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/user/css/fileinput.min.css') }}" media="all" rel="stylesheet" type="text/css" />
{% endblock %}
{% block title %}Image{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <h1>Image</h1>
        </div>
        <div class="row">
            <div class="content col-md-12">
                {{ form_start(form) }}
                    <div class="col-md-6 col-md-offset-3">
                        {{ form_label(form.path) }} {{ form_widget(form.path) }}
                    </div>
                    <div class="col-md-12 col-center margin-top-10">{{ form_widget(form.Enregistrer) }}</div>
                    {{ form_widget(form._token) }}
                </form>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/user/js/plugins/canvas-to-blob.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/user/js/fileinput.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/user/js/fileinput_locale_fr.js') }}"></script>
    <script src="{{ asset('bundles/user/js/image.js') }}"></script>
{% endblock %}