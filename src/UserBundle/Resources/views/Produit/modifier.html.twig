{% extends "base.html.twig" %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/user/css/fileinput.min.css') }}" media="all" rel="stylesheet" type="text/css" />
{% endblock %}
{% block title %}Produit{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <h1>Produit</h1>
        </div>
        <div class="row">
            <div class="content col-md-12">
                {{ form_start(form) }}
                    <div class="col-md-12">
                        <h2>Informations générales</h2>
                    </div>
                    <div class="col-md-6 input-margin">
                        <div class="col-md-12">{{ form_widget(form.type) }}</div>
                        <div class="col-md-12 margin-top-20">{{ form_label(form.nom) }} {{ form_widget(form.nom) }}</div>
                        <div class="col-md-12">{{ form_label(form.prixVente) }} {{ form_widget(form.prixVente) }}</div>
                        {{ form_widget(form._token) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.pathImage) }} {{ form_widget(form.pathImage) }}
                    </div>
                    <div class="col-md-12">
                        <h2>Composants</h2>
                        <button class="btn btn-primary" id="add-composant">Ajouter un composant</button>
                        <div id="composants" class="input-margin">
                            {% set nbComposant = 0 %}
                            {% for composant in form.composants %}
                                <div id="produit_modifier_composants_{{ nbComposant }}" class="composant col-md-6">
                                    <div class="col-md-12">
                                        <label class="required btn-margin">Nouveau composant</label><div id="delete-produit_modifier_composants_{{ nbComposant }}" class="btn btn-danger delete">X</div>
                                    </div>
                                    <div class="col-md-12">
                                        <label for="produit_modifier_composants_{{ nbComposant }}_produitComposant" class="required">Produit :</label>
                                        <select id="produit_modifier_composants_{{ nbComposant }}_produitComposant" name="produit_modifier[composants][{{ nbComposant }}][produitComposant]" class="form-control"></select>
                                    </div>
                                    <div class="col-md-12">
                                        <label for="produit_modifier_composants_{{ nbComposant }}_quantite" class="required">Quantité :</label>
                                        <input id="produit_modifier_composants_{{ nbComposant }}_quantite" name="produit_modifier[composants][{{ nbComposant }}][quantite]" required="required" min="1" type="number" class="form-control">
                                    </div>
                                </div>
                                {% set nbComposant = nbComposant + 1 %}
                            {% endfor %}
                        </div>
                    </div>
                    <div class="col-md-12 col-center">{{ form_widget(form.Enregistrer) }}</div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/user/js/plugins/canvas-to-blob.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/user/js/fileinput.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/user/js/fileinput_locale_fr.js') }}"></script>
    <script src="{{ asset('bundles/user/js/produit.js') }}"></script>
{% endblock %}